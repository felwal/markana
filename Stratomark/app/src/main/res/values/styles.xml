<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- appbar -->

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elev_appbar</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="android:theme">@style/ToolbarTheme</item>

        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/Theme.Stratomark.PopupOverlay</item>
    </style>

    <style name="ToolbarTheme">
        <!-- built-in action buttons, e.g. home/up -->
        <item name="colorControlNormal">?attr/colorOnBackground</item>
        <!-- custom action buttons -->
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <style name="AppbarTheme">
        <!-- built-in action buttons, e.g. home/up -->
        <item name="colorControlNormal">?attr/colorSecondary</item>
        <!-- custom action buttons -->
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <!-- edittext -->

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/type_note_body</item>
        <item name="android:focusedByDefault">false</item>
        <!--<item name="android:textColorHint">?android:textColorSecondary</item>-->
    </style>

    <style name="EditText.Note">
        <item name="android:backgroundTint">@color/trans</item>
    </style>

    <style name="EditText.Note.Title">
        <item name="android:textSize">@dimen/type_note_title</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>