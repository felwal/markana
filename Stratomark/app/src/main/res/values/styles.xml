<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elev_toolbar</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>

        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/Theme.Stratomark.PopupOverlay</item>
    </style>

    <style name="ToolbarTheme">
        <!-- built-in action buttons, e.g. home/up -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- custom action buttons -->
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

</resources>