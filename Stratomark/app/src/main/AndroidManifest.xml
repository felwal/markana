<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felwal.stratomark">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stratomark">

        <activity
            android:name=".ui.notelist.NoteListActivity"
            android:label="@string/title_activity_note_list"
            android:theme="@style/Theme.Stratomark.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.notedetail.NoteDetailActivity"
            android:parentActivityName=".ui.notelist.NoteListActivity"
            android:label="@string/title_activity_note_detail"
            android:theme="@style/Theme.Stratomark.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".ui.setting.SettingsActivity"
            android:parentActivityName=".ui.notelist.NoteListActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Stratomark.NoActionBar" />

    </application>

</manifest>