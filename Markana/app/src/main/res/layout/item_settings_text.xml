<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_settings_item_horizontal"
        android:paddingEnd="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorControlNormal"
        tools:srcCompat="@drawable/ic_settings_24"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_settings_item_vertical"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_settings_item_horizontal"
        android:textAppearance="@style/TextAppearance.Markana.Subtitle1"
        app:layout_constraintBottom_toTopOf="@+id/tv_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_settings_item_horizontal"
        android:layout_marginStart="@dimen/spacing_small"
        android:textAppearance="@style/TextAppearance.Markana.Body2"
        app:layout_constraintEnd_toEndOf="@+id/v_divider"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="Value"
        tools:visibility="visible" />

    <View
        android:id="@+id/v_divider"
        android:layout_marginTop="@dimen/spacing_settings_item_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_value"
        style="@style/Widget.Markana.Divider" />

</androidx.constraintlayout.widget.ConstraintLayout>