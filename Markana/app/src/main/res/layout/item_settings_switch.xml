<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="SettingCl">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_24"
        app:tint="?attr/colorControlNormal"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/spacing_settings_item_vertical"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_settings_item_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tv_desc"
        app:layout_constraintEnd_toStartOf="@+id/sw"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title"
        style="@style/TextView.HeadingSetting" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_settings_item_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/sw"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="Description"
        tools:visibility="visible"
        style="@style/TextView.Body" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_settings_item_horizontal"
        android:clickable="false"
        android:textColorLink="#00FF0000"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=""
        style="@style/TextView.HeadingSetting" />

    <View
        android:id="@+id/v_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_settings_item_vertical"
        app:layout_constraintEnd_toStartOf="@+id/sw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        style="@style/Divider" />

</androidx.constraintlayout.widget.ConstraintLayout>