<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default theme -->

    <style name="Theme.Default" parent="Theme.Felwal">
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>

        <!-- primary -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_primary_dark</item>
        <item name="colorOnPrimary">@color/fw_white</item>

        <!-- secondary -->
        <item name="colorSecondary">@color/red_accent</item>
        <item name="colorSecondaryVariant">@color/red_primary</item>
        <item name="colorOnSecondary">?android:colorBackground</item>

        <!-- theme/style -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Markana.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Markana.ActionBarPopup</item>
        <item name="android:textViewStyle">@style/Widget.Markana.TextView</item>
        <item name="android:editTextStyle">@style/Widget.Markana.EditText</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Markana" parent="Theme.Default">
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorNoteBase">@color/notebase_lt</item>
    </style>

</resources>