<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default theme -->

    <style name="Theme.Default" parent="Theme.Felwal">
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>

        <!-- primary -->
        <item name="colorPrimary">@color/red_400</item>
        <item name="colorOnPrimary">?android:colorBackground</item>

        <!-- secondary -->
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>

        <!-- drawable -->
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_24</item>
        <item name="fw_colorDialogSelectedIcon">@drawable/ic_done_24</item>

        <!-- settings -->
        <item name="fw_settingHeaderTextAppearance">@style/TextAppearance.Markana.Subtitle2</item>
        <item name="fw_settingItemTextAppearance">@style/TextAppearance.Markana.Subtitle1</item>
        <item name="fw_settingDescTextAppearance">@style/TextAppearance.Markana.Body2</item>

        <!-- style -->
        <item name="android:textViewStyle">@style/Widget.Markana.TextView</item>
        <item name="android:editTextStyle">@style/Widget.Markana.EditText</item>

        <!-- theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Felwal.Dialog</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Markana.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Markana.ActionBarPopup</item>
        <item name="fw_floatingActionMenuTheme">@style/ThemeOverlay.Markana.Fam</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Markana" parent="Theme.Default">
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSemiSurface">@color/semiSurface_mono_lt</item>
    </style>

