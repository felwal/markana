<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default theme -->

    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <!-- color -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red_accent</item>
        <item name="colorSecondaryVariant">@color/red_primary</item>
        <item name="colorOnSecondary">?android:colorBackground</item>

        <!-- type -->
        <item name="textAllCaps">false</item>

        <!-- theme/style -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Markana.Dialog</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Markana.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Markana.ActionBarPopup</item>
        <item name="android:textViewStyle">@style/Widget.Markana.TextView</item>
        <item name="android:editTextStyle">@style/Widget.Markana.EditText</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Markana" parent="Theme.Default">
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSurface">@color/surface_lt</item>
        <item name="android:strokeColor">@color/divider_lt</item>
    </style>

    <!-- theme extensions -->

    <style name="Theme.Markana.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>