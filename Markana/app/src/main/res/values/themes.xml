<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default theme for both light and dark -->

    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <!-- color -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red_light</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">?android:colorBackground</item>

        <!-- menu -->
        <item name="textAllCaps">false</item>

        <!-- theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Markana.MaterialAlertDialog</item>

        <!-- widget -->
        <item name="android:textViewStyle">@style/Widget.Markana.TextView</item>
        <item name="android:editTextStyle">@style/Widget.Markana.EditText</item>
    </style>

    <!-- light theme -->

    <style name="Theme.Markana" parent="Theme.Default">
        <item name="android:windowLightStatusBar">true</item>

        <!-- divider (manual) -->
        <item name="android:strokeColor">@color/grey6</item>

        <!-- surface -->
        <item name="colorSurface">@color/grey7</item>
    </style>

    <!--  -->

    <style name="Theme.Markana.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Markana.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Markana.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>