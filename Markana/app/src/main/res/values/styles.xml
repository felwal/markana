<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- dialog -->

    <style name="ThemeOverlay.Markana.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- shape -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Markana.Dialog</item>
        <!-- title -->
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.Markana.TextView.Dialog.Title</item>
        <!-- message -->
        <item name="materialAlertDialogBodyTextStyle">@style/Widget.Markana.TextView.Dialog.Body</item>
        <!-- list item -->
        <item name="android:checkedTextViewStyle">@style/Widget.Markana.TextView.Dialog.Item</item>

        <!-- <item name="android:background">?colorSurface</item> -->
    </style>
    
    <style name="ShapeAppearanceOverlay.Markana.Dialog" parent="">
        <item name="cornerSize">@dimen/corner_radius_dialog</item>
    </style>
    
    <style name="Widget.Markana.TextView.Dialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Markana.Headline2</item>
    </style>

    <style name="Widget.Markana.TextView.Dialog.Body" parent="">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.Markana.Body1</item>
    </style>

    <style name="Widget.Markana.TextView.Dialog.Item" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.Markana.Subtitle1</item>
    </style>

    <!-- appbar -->

    <style name="ThemeOverlay.Markana.Popup" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="colorSurface">?android:colorBackground</item>
    </style>

    <style name="ThemeOverlay.Markana.Appbar" parent="">
        <!-- built-in action buttons, e.g. home/up -->
        <!--<item name="colorControlNormal">?colorOnBackground</item>-->
        <!-- custom action buttons -->
        <item name="iconTint">?colorControlActivated</item>
    </style>

    <style name="Widget.Markana.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Markana.Appbar</item>
        <item name="elevation">@dimen/elev_ab</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.Markana.Popup</item>
    </style>

    <!-- widget -->

    <style name="Widget.Markana.Fab" parent="">
        <item name="android:elevation">@dimen/elev_fab</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="fabSize">normal</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="iconTint">?colorOnSecondary</item>
    </style>

    <style name="Widget.Markana.Fab.Mini">
        <item name="fabSize">mini</item>
    </style>

    <style name="Widget.Markana.TextView" parent="Widget.AppCompat.TextView">
    </style>

    <style name="Widget.Markana.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:focusedByDefault">false</item>
    </style>

    <style name="Widget.Markana.EditText.NoTint">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.Markana.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_divider</item>
        <item name="android:background">?android:listDivider</item>
    </style>

    <!-- textappearance -->

    <style name="TextAppearance.Markana" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Markana.Headline1">
        <item name="android:textSize">@dimen/type_headline1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Markana.Headline2">
        <item name="android:textSize">@dimen/type_headline2</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextAppearance.Markana.Subtitle1">
        <item name="android:textSize">@dimen/type_subtitle1</item>
    </style>

    <style name="TextAppearance.Markana.Subtitle2">
        <item name="android:textSize">@dimen/type_subtitle2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Markana.Body1">
        <item name="android:textSize">@dimen/type_body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Markana.Body2">
        <item name="android:textSize">@dimen/type_body2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Markana.Caption">
        <item name="android:textSize">@dimen/type_caption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>