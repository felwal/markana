<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- appbar -->

    <style name="ThemeOverlay.Markana.ActionBar" parent="">
        <item name="iconTint">?colorControlActivated</item>
        <item name="searchViewStyle">@style/Widget.Markana.SearchView.ActionBar</item>
    </style>

    <style name="ThemeOverlay.Markana.ActionBarPopup" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="searchViewStyle">@style/Widget.Markana.SearchView</item>
    </style>

    <style name="Widget.Markana.SearchView.ActionBar" parent="Widget.AppCompat.SearchView.ActionBar" />

    <style name="Widget.Markana.SearchView" parent="Widget.AppCompat.SearchView" />

    <style name="Widget.Markana.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Markana.ActionBar</item>
        <item name="elevation">@dimen/elev_ab</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.Markana.ActionBarPopup</item>
        <item name="collapseIcon">@drawable/ic_done_24</item>
    </style>

    <!-- widget -->

    <style name="ThemeOverlay.Markana.Fam" parent="ThemeOverlay.Felwal.Fam">
        <item name="fw_mainFabStyle">@style/Widget.Markana.Fab</item>
        <item name="fw_miniFabStyle">@style/Widget.Markana.Fab.Mini</item>

        <item name="fw_closedFabColor">?colorSecondary</item>
        <item name="fw_openedFabColor">?colorSurface</item>
        <item name="fw_miniFabColor">?colorSecondary</item>

        <item name="fw_closedIconTint">?colorOnSecondary</item>
        <item name="fw_openedIconTint">?colorControlActivated</item>
        <item name="fw_miniIconTint">?colorOnSecondary</item>

        <item name="fw_closedIconSrc">@drawable/ic_add_24</item>
        <item name="fw_openedIconSrc">@drawable/ic_close_24</item>

        <item name="fw_textAppearance">@style/TextAppearance.Markana.Body2</item>

        <item name="fw_overlayAlpha">0.96</item>
        <item name="fw_animDuration">150</item>
        <item name="fw_animRotation">135</item>
    </style>

    <style name="Widget.Markana.Fab" parent="Widget.Felwal.Fab">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="iconTint">?colorOnSecondary</item>
    </style>

    <style name="Widget.Markana.Fab.Mini" parent="Widget.Felwal.Fab.Mini" />

    <style name="Widget.Markana.TextView" parent="Widget.AppCompat.TextView">
    </style>

    <style name="Widget.Markana.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:focusedByDefault">false</item>
    </style>

    <style name="Widget.Markana.EditText.NoTint">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.Markana.TabLayout" parent="Widget.Design.TabLayout">
        <item name="elevation">0dp</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="tabIndicator">@drawable/shape_indicator_tab</item>
        <item name="tabIndicatorHeight">@dimen/height_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.Markana.Subtitle1.TabLayoutTitle</item>
        <item name="tabSelectedTextColor">?colorControlActivated</item>
    </style>

    <!-- textappearance -->

    <style name="TextAppearance.Markana" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Markana.Headline1">
        <item name="android:textSize">@dimen/type_headline1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Markana.Headline2">
        <item name="android:textSize">@dimen/type_headline2</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextAppearance.Markana.Subtitle1">
        <item name="android:textSize">@dimen/type_subtitle1</item>
    </style>

    <style name="TextAppearance.Markana.Subtitle1.TabLayoutTitle">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Markana.Subtitle2">
        <item name="android:textSize">@dimen/type_subtitle2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Markana.Body1">
        <item name="android:textSize">@dimen/type_body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Markana.Body2">
        <item name="android:textSize">@dimen/type_body2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Markana.Caption">
        <item name="android:textSize">@dimen/type_caption</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

</resources>