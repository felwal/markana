<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felwal.markana">

    <application
        android:name="com.felwal.markana.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Markana">

        <activity
            android:name="com.felwal.markana.ui.notelist.NoteListActivity"
            android:label="@string/title_activity_notelist"
            android:theme="@style/Theme.Markana.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.felwal.markana.ui.notedetail.NoteDetailActivity"
            android:parentActivityName="com.felwal.markana.ui.notelist.NoteListActivity"
            android:label="@string/title_activity_notedetail"
            android:theme="@style/Theme.Markana.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.felwal.markana.ui.setting.SettingsActivity"
            android:parentActivityName="com.felwal.markana.ui.notelist.NoteListActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Markana.NoActionBar" />

    </application>

</manifest>